<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EF5B0C"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:src="@drawable/usapng"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Name" />

        <TextView
            android:id="@+id/currencyText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Currency" />

        <TextView
            android:id="@+id/dieselPriceTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Diesel Price" />

        <TextView
            android:id="@+id/gasolinepricetv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Gasoline Price" />

        <TextView
            android:id="@+id/midgradetv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Mid Grade" />

        <TextView
            android:id="@+id/premiumtv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Premium Price" />


    </LinearLayout>
</LinearLayout>


