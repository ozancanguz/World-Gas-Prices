<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#6F1AB6"
    android:layout_margin="1dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/trdieselrvimageview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/trgasoline"
        app:srcCompat="@drawable/dieselhome" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/RvBrandDieselTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aytemiz"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RvDieselPriceTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21.80"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/RvDieselAddedTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24.03"
            android:textColor="@color/white"
            android:gravity="center"

            android:textSize="22sp"/>
    </LinearLayout>
</LinearLayout>
