<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#512E67">

    <ProgressBar
        android:id="@+id/trlpgpb"
        android:layout_width="94dp"
        android:layout_height="64dp"
        android:backgroundTint="#b20238"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/trlpgrv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/trlpgrv"
        app:layout_constraintVertical_bias="0.348"></ProgressBar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trlpgrv"
        android:layout_width="408dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trlpgspinner"
        tools:listitem="@layout/tr_gasoline_rv" />

    <ImageView
        android:id="@+id/trlpgsearchbtn"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toTopOf="@+id/trlpgrv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toEndOf="@+id/trlpgbrand"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/trlpgbrand"
        android:layout_width="241dp"
        android:layout_height="53dp"
        android:layout_marginStart="72dp"
        android:background="#FA9191"
        android:gravity="center"
        android:text="Akpet"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/trlpgspinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.432" />

    <Spinner
        android:id="@+id/trlpgspinner"
        android:layout_width="184dp"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/trlpgrv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>